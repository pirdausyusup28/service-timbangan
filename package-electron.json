{
  "name": "timbangan-service",
  "version": "1.0.0",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "build": {
    "appId": "com.timbangan.service",
    "productName": "Timbangan Service",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/electron-builder/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "serialport": "^13.0.0",
    "ws": "^8.18.3"
  }
}